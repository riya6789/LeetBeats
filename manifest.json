{
 "manifest_version": 3,
 "name": "LeetBeats-2",
 "version": "1.0",
 "description": "Extension for LeetCode",
 "permissions": ["tabs"],
 "background": {
  "service_worker": "background.js"
},
 "host_permissions": [
  "https://leetcode.com/*"
],
 "content_scripts": [
   {
     "matches": ["https://leetcode.com/problems/*"],
     "js": ["canvas-confetti.js","confetti.js", "content.js"],
     "css":["styles.css"]
   }
 ],
 "web_accessible_resources": [
    {
      "resources": ["v1.mp4", "v2.mp4", "v3.mp4", "v4.mp4"],
      "matches": ["https://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
